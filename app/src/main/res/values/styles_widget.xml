<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.LB" parent="" />

    <style name="Widget.LB.ProgressBar" parent="Widget.AppCompat.ProgressBar" />

    <style name="Widget.LB.RadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="colorControlNormal">@color/trans_black_36</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

    <style name="Widget.LB.Button.Colored" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textColor">@color/btn_colored_txt_material</item>
    </style>

    <style name="Widget.NotifyMoe.RecyclerView.FastScroll" parent="android:Widget">
        <item name="fastScrollEnabled">true</item>
        <item name="fastScrollHorizontalThumbDrawable">@drawable/recyclerview_scroll_thumb</item>
        <item name="fastScrollHorizontalTrackDrawable">@drawable/recyclerview_scroll_track</item>
        <item name="fastScrollVerticalThumbDrawable">@drawable/recyclerview_scroll_thumb</item>
        <item name="fastScrollVerticalTrackDrawable">@drawable/recyclerview_scroll_track</item>
    </style>
</resources>